{
  "name": "@apollosolutions/travel-supergraph",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:subgraphs & npm run dev:router",
    "dev:subgraphs": "NODE_ENV=dev nodemon dev.js",
    "dev:router": "rover dev --supergraph-config supergraph-config-dev.yaml --router-config router-config-dev.yaml",
    "start": "node prod.js",
    "test": "npm run test:compile && npm run test:compose",
    "test:compose": "APOLLO_ELV2_LICENSE=accept rover supergraph compose --config supergraph-config-dev.yaml ",
    "test:compile": "tsc"
  },
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "@apollo/subgraph": "^2.4.1",
    "@faker-js/faker": "^8.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "ext": "js,json,graphql"
  }
}
